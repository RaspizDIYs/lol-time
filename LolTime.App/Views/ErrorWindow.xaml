<Window x:Class="LolTime.App.Views.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LolTime — Ошибка"
        Height="320"
        Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Border Background="#1E1E1E" Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Что-то пошло не так"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"/>

            <TextBox x:Name="DetailsBox"
                     Grid.Row="1"
                     Margin="0,12,0,12"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"/>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Скопировать"
                        Width="120"
                        Margin="0,0,10,0"
                        Click="Copy_Click"/>
                <Button Content="Закрыть"
                        Width="100"
                        Click="Close_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

